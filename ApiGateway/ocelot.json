{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Vendas/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "localhost", "Port": 5001 }
      ],
      "UpstreamPathTemplate": "/vendas/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "SwaggerKey": "vendas"
    },
    {
      "DownstreamPathTemplate": "/api/Vendas",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "localhost", "Port": 5001 }
      ],
      "UpstreamPathTemplate": "/vendas",
      "UpstreamHttpMethod": ["GET", "POST"],
      "SwaggerKey": "vendas"
    },
    
    {
      "DownstreamPathTemplate": "/api/Produtos/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "localhost", "Port": 5002 }
      ],
      "UpstreamPathTemplate": "/estoque/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "SwaggerKey": "estoque"
